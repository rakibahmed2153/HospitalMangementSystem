    <!-- Custom styles for this template -->
    <link href="/style.css" rel="stylesheet">

     <!-- Title Icon -->
    <link rel="icon" href="/icon.ico" alt="Logo">
</head>

  <body style="height: 100%" class="admin">
    
    <div class="container-fluid display_table">
       <div class="row display_table_row">
                  <div class="col-md-2 side_menu display_table_cell" style="width: 17%!important">
             <h1 style="color: aquamarine;">Patient Panel</h1>
             <ul>
             
          <li class="link">
               <a href="/patient"><h5>Dashboard</h5></a>
          </li>
          <li class="link">
               <a href="/patient/vappoint"><h5>View Apponitment</h5></a>
          </li>
           <li class="link">
               <a href="/patient/vprescrip"><h5>View Prescription</h5></a>
          </li>
           <li class="link">
               <a href="/patient/vdoctor"><h5>View Doctor Lists</h5></a>
          </li>
          
          <li class="link">
            
            <a data-toggle="collapse" href="#note" aria-expanded="false" aria-controls="collapseExample" class="active">
             <h5> NoticeBoard </h5>
            </a>
          
          <div class="collapse" id="note">
            <div class="card card-body">
             <a href="/patient/vnotice">View Notices</a> 
            </div>
          </div>
          </li>
           <li class="link">
            
            <a data-toggle="collapse" href="#adm" aria-expanded="false" aria-controls="collapseExample" class="active">
             <h5> Blood Bank </h5>
            </a>
          
          <div class="collapse" id="adm">
            <div class="card card-body">
             <a href="/patient/vblood">View Avaliable Bloods</a> 
            </div>
          </div>
          </li>
         
         <li class="link">
               <a href="/patient/vreport"><h5>Operation Report</h5></a>
          </li>
           <li class="link">
               <a href="/patient/vbed"><h5>Bed Allotment</h5></a>
          </li>
           <li class="link">
               <a href="/patient/managePro"><h5>Manage Profile</h5></a>
          </li>

           <li class="link">
               <a href="/patient/cngPass"><h5>Change Password</h5></a>
          </li>      
        </ul>
         </div>

         <div class="col-md-10 display_table_cell">
          <div class="row" id="nav-header">
            
              <div class="col-md-7 offset-md-2">
                <ul >

                  <li><h4 style="color: aquamarine;">Welcome To Administator Area</h4></li>
                  <li style="margin-left: 145px;">
                    <a href="/logout"><img src="/logout.png" style="width: 25px;" alt="Logout Icon">
                      Log out
                    </a>
                  </li>
                </ul>
              </div>
            
          </div>

            <div class="col-md-12" style="margin-top: 80px;">
             
                   <h1 class="text-center">Update Data</h1>

           <form method="post">
                <div class="col-lg-6 offset-md-3">
                    <h5>Patient Name:</h5>
                    <p name="name" value="<%=user.pname%>" style="width:100%; font-size: x-large; "><b><%=user.pname%></b></p>
                    
                </div>
                
                <div class="form-group col-lg-6 offset-md-3" >
                      <h5>Phone Number:</h5>
                         <input class="form-control" type="text" name="num" value="<%=user.number%>" style="width:100%;" required>                   
                     </div>
                     <br>
                   
                   <div class="form-group col-lg-6 offset-md-3" >
                      <h5>Registered Doctor:</h5>
                         <select  class="custom-select" style="width:100%;" name="doctor">
                           <option name="<%= user.doctor %>"><%= user.doctor %></option>
                         </select>                
                     </div>
                     <br>
                     
                     <div class="form-group col-lg-6 offset-md-3" >
                      <h5>Address:</h5>
                         <input class="form-control" type="text" name="address" value="<%=user.address%>" style="width:100%;" required>                   
                     </div>
                     <br>

                    <div class="col-lg-6 offset-md-3">
                   <input style="color:  #004d00;width:100px;" type="submit" name="Update" value="update" >
            <input style="color:  #ff0000;width: 100px; margin-bottom: 40px;" type="reset">
                       </div>
                  </form>
                  
              
            </div>

         </div>
        
       </div>
      
    </div>




     <!-- Bootstrap core JavaScript -->
    <script src="/jquery.min.js"></script>
    <script src="/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/jquery.easing.min.js"></script>

    <!-- Custom JavaScript for this theme -->
    <script src="/scrolling-nav.js"></script>

    <!--Bootstrap JavaScript -->
    <script src="/bootstrap.min.js"></script>
  </body>
</html>