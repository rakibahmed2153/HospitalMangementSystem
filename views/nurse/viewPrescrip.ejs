<!DOCTYPE html>

<html style="height: 100%">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Hospital Managment</title>

    <!-- Bootstrap core CSS -->
    <link href="/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/scrolling-nav.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/style.css" rel="stylesheet">

     <!-- Title Icon -->
    <link rel="icon" href="/icon.ico" alt="Logo">
</head>

  <body style="height: 100%" class="admin">
    
    <div class="container-fluid display_table">
       <div class="row display_table_row">
         <div class="col-md-2 side_menu display_table_cell" style="width: 17%!important">
             <h1 style="color: aquamarine;">Nurse Panel</h1>
             <ul>
             
         <li class="link">
               <a href="/nurse"><h5>Deshboard</h5></a>
          </li>
        
             
         <li class="link">
            
            <a data-toggle="collapse" href="#dept" aria-expanded="false" aria-controls="collapseExample" class="active">
             <h5> Patient </h5>
            </a>
          
          <div class="collapse" id="dept">
            <div class="card card-body">
               <a href="/nurse/addpatient">Add Patient</a>
             <a href="/nurse/viewpct">View Patient List</a> 
            </div>
          </div>
          </li>

           <li class="link">
            
            <a data-toggle="collapse" href="#doc" aria-expanded="false" aria-controls="collapseExample" class="active">
             <h5> Bed Allotment </h5>
            </a>
          
          <div class="collapse" id="doc">
            <div class="card card-body">
             <a href="/nurse/addbed">Bed Allotment</a> 
             <a href="/nurse/vbed">View Bed Allotation</a> 
            </div>
          </div>
          </li>

          <li class="link">
            
            <a data-toggle="collapse" href="#pat" aria-expanded="false" aria-controls="collapseExample" class="active">
              <h5>Manage Blood Bank</h5>
            </a>
          
          <div class="collapse" id="pat">
            <div class="card card-body">
               <a href="/nurse/addblood">Add Blood Doner</a>
             <a href="/nurse/vblood">View Blood Doner Lists</a> 
            </div>
          </div>
          </li>

          <li class="link">
            
            <a data-toggle="collapse" href="#note" aria-expanded="false" aria-controls="collapseExample" class="active">
             <h5> NoticeBoard </h5>
            </a>
          
          <div class="collapse" id="note">
            <div class="card card-body">
             <a href="/nurse/vnotice">View Notices</a> 
            </div>
          </div>
          </li>
           
           <li class="link">
               <a href="/nurse/vprescrip"><h5>View Prescriptions</h5></a>
          </li>
          <li class="link">
               <a href="/nurse/vreport"><h5>View Opertaion Reports</h5></a>
          </li>
           <li class="link">
               <a href="/nurse/managePro"><h5>Manage Profile</h5></a>
          </li>

           <li class="link">
               <a href="/nurse/cngPass"><h5>Change Password</h5></a>
          </li>      
        </ul>
         </div>
         <div class="col-md-10 display_table_cell">
          <div class="row" id="nav-header">
            
              <div class="col-md-7 offset-md-2">
                <ul >

                  <li><h4 style="color: aquamarine;">Welcome To Administator Area</h4></li>
                  <li style="margin-left: 145px;">
                    <a href="/logout"><img src="/logout.png" style="width: 25px;" alt="Logout Icon">
                      Log out
                    </a>
                  </li>
                </ul>
              </div>
            
          </div>

            <div class="col-md-12" style="margin-top: 80px;">
             
                   <h1 class="text-center">Prescription Lists</h1>

                           <table border="1" class="table">
                    <tr>
                     
                      <td>Id</td>
                      <td>Patient Name</td>
                      <td>Problem</td>
                      <td>Prescription</td>
                     
                      
                    </tr>

                    <% for(var i=0; i < userList.length; i++){ %>

                    <tr>
                     
                      <td><%= userList[i].id %></td>
                      <td><%= userList[i].pname %></td>
                      <td><%= userList[i].problem %></td>
                      <td><%= userList[i].prescription %></td>
                    </tr>

                    <% } %>
                  </table>
                                  
              
            </div>

         </div>
        
       </div>
      
    </div>




     <!-- Bootstrap core JavaScript -->
    <script src="/jquery.min.js"></script>
    <script src="/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/jquery.easing.min.js"></script>

    <!-- Custom JavaScript for this theme -->
    <script src="/scrolling-nav.js"></script>

    <!--Bootstrap JavaScript -->
    <script src="/bootstrap.min.js"></script>
  </body>
</html>