           <li class="link">
               <a href="/admin/managePro"><h5>Manage Profile</h5></a>
          </li>

           <li class="link">
               <a href="/admin/cngpass"><h5>Change Password</h5></a>
          </li>      
        </ul>
         </div>

         <div class="col-md-10 display_table_cell">
          <div class="row" id="nav-header">
            
              <div class="col-md-7 offset-md-2">
                <ul >

                  <li><h4 style="color: aquamarine;">Welcome To Administator Area</h4></li>
                  <li style="margin-left: 145px;">
                    <a href="/logout"><img src="/logout.png" style="width: 25px;" alt="Logout Icon">
                      Log out
                    </a>
                  </li>
                </ul>
              </div>
            
          </div>

            <div class="col-md-12" style="margin-top: 80px;">
             
                   <h1 class="text-center">Department Lists</h1>

                           <table border="1" class="table">
                    <tr>
                      <td>ID</td>
                      <td>Title</td>
                      <td>Message</td>
                      <td>Action</td>
                    </tr>

                    <% for(var i=0; i < userList.length; i++){ %>

                    <tr>
                      <td><%= userList[i].id %></td>
                      <td><%= userList[i].title %></td>
                      <td><%= userList[i].message %></td>
                      <td>
                        <a href="/admin/noticeedit/<%= userList[i].id %>" style="color: blue;">Edit</a> | 
                        <a href="/admin/noticedelete/<%= userList[i].id%>" style="color: blue;">Delete</a>
                      </td>
                    </tr>

                    <% } %>
                  </table>

                                  
              
            </div>

         </div>
        
       </div>
      
    </div>




